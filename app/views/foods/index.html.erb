
<section class="py-10 flex flex-col gap-10 bg-yellow-50">
<div class="lg:w-3/6 w-5/6 m-auto">
<%= button_to 'Add new food', new_user_food_path(current_user), method: :get, class:"float-right bg-amber-400 p-3 rounded-3xl hover:bg-amber-500 text-white"%>
</div>


  <div class="lg:w-3/6 w-5/6 m-auto">
    <table class="table-fixed">
      <thead>
        <tr>
          <th>Food</th>
          <th>Measurement unit</th>
          <th>Unit price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>

        <% @foods.each do |food|%>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.quantity %></td>
            <td><a href="what">Button</a></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>

</section>