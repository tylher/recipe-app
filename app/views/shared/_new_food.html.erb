<%= form_with model: food, url: path, method: :post, local: true, class:" border-2 w-3/5 flex flex-col items-center px-20 py-6"  do |f|%>
        <div class="flex flex-col w-full mb-2">
            <%= f.label :name, "Name of food" %>
            <%= f.text_field :name%>
        </div>
        <div class="flex flex-col w-full mb-2">
            <%= f.label :measurement_unit, "Measurement Unit" %>
            <%= f.text_field :measurement_unit%>
        </div>

        <div class="flex flex-col w-full mb-2">
            <%= f.label :quantity, "Quantity" %>
            <%= f.number_field :quantity,min: 0, class:"w-full" %>
        </div>

        <div class="flex flex-col w-full mb-2">
            <%= f.label :price, "Price" %>
            <%= f.number_field :price,min: 0, class:"w-full" %>
        </div>

        <%= f.submit "Submit", class: "text-white bg-gradient-to-r from-blue-500 via-blue-600 cursor-pointer to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>

<% end %>